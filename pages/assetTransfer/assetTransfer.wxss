/* pages/assetTransfer/assetTransfer.wxss */
.transfer{
  width: 100%;
  overflow-y: auto;
}
.bottom{
  height: 70px;
  width: 100%;
  text-align: center;
  padding-top: 20px;
  color: #0077FF;
  background-color: #fff;
  border-top: solid 1px #eeeeee;
}
.maskModule{
  width: 100%;
  height: 100%;
  opacity: 1 !important;
}
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content view{
  height: 25px;
  line-height: 25px;
  text-align: center;
  margin-top: 5px;
  color: white;
}
.qrCode{
  width: 288px;
  height: 288px;
}
.space{
  margin: 10px 0px;
}
.checkContent{
  width: 350px;
  border-radius: 5px;
  box-shadow: 0px 0px 3px 1px #c5c9d367, 0px 2px 3px 1px #c5c9d367;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}
.checkButton{
  height: 40px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.checkButton view{
  width: 50%;
  text-align: center;
  color: #0077FF;
}
.checkButton view:first-of-type{
  border-right: solid 1px #eeeeee;
}
.margin-bottom-10{
  margin-bottom: 10px;
}