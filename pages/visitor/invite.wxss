
.invite{
    width: 100%;
    height: 100%;
    padding: 40px 20px 0px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    background-color: #fff;
    overflow-y: auto;
}
.invite image{
    margin: 0 auto;
    width: 300px;
    height: 300px;
}
.invite button{
    width: 300px;
    height: 40px;
    margin-top: 40px;
    background-color: #007FFF;
    color: #FFFFFF;
}