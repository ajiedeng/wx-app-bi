.page {
    overflow: auto;
    height: 100%;
    padding-bottom: 160rpx;
    box-sizing: border-box;
}

.auth{
    width: 100%;
    height: 100%;
    padding-top: 90px;
    box-sizing: border-box;
}
.auth image{
    width: 100%;
    height: 344px;
}
.auth button{
    position: absolute;
    bottom: 40px;
    color: #FFFFFF;
    height: 40px;
    background-color: #0180FF;
}


.save{
    position: fixed;
    bottom: 0;
    width: 100%;
    z-index: 10;
    height: 40px;
    line-height: 40px;
    text-align: center;
    background-color: #fff;
    border-top: solid 1rpx #9999992a;
}