/* pages/visitor/detail.wxss */
.page {
  overflow: auto;
  height: 100%;
}

.bottomButton{
  position: fixed;
  text-align: center;
  height: 40px;
  line-height: 40px;
  bottom: 0;
  width: 100%;
  box-shadow: 0rpx 0rpx 3rpx 1rpx #cac9c9;
  color: #007FFF;
  background: #fff;
}

.qrCode{
  width: 280rpx;
  height: 280rpx;
}

.detailPage {
  position: relative;
}

.auditWaiting {
  height: 240rpx;
  background: #007FFF;
  display: flex;
  justify-content: left;
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
  padding-left: 40rpx;
  padding-top: 20rpx;
}

.auditWaiting text {
  display: block;
  color: #fff;
  font-size: 44rpx;
}

.auditWaiting image {
  vertical-align: middle;
  padding-right: 32rpx;
  width: 80rpx;
  position: relative;
  top: 14rpx;
}

.panel {
  position: relative;
  bottom: 24rpx;
  left: 24rpx;
  width: 702rpx;
  border-radius: 8rpx;
  /* padding: 32rpx 0 0 40rpx; */
  box-sizing: border-box;

}

.loaction {
  height: 162rpx;
  display: flex;
  justify-content: space-between;
  padding: 32rpx 0 0 40rpx;
  background: #fff;
  width: 702rpx;
  box-sizing: border-box;
  margin: 0 auto;
}

.loaction .nameCompany {
  font-weight: bold;
  color: #000000;
}

.loaction image {
  width: 32rpx;
  vertical-align: middle;
  margin-right: 4rpx;
}

.loaction a {
  color: #666;
  font-size: 28rpx;
}

.loaction .btnEnter {
  height: initial;
  padding-top: 25rpx;
}

.loaction .btnEnter image {
  width: 18rpx;
  height: 28rpx;
  margin-right: 24rpx;
  vertical-align: middle;
}

.scancode {
  padding-bottom: 40rpx;
  background: #fff;
  padding: 32rpx 40rpx 24rpx 40rpx;
  margin-bottom: 24rpx;
  border-radius: 8rpx;
}

.scancode .ipinfo {
  font-size: 28rpx;
  color: #888;
}

.ipinfo text {
  display: block;
  color: #000;
  font-size: 36rpx;
  font-weight: bold;
}

.scancode .code {
  width: 280rpx;
  height: 280rpx;
  margin: 32rpx auto 36rpx;
}

.code image {
  height: 100%;
  width: 100%;
}

.scancode .note,
.note text {
  font-size: 28rpx;
  color: #666;
}

.note text {
  display: block;
}

.visitorDetail {
  padding: 0 24rpx 100rpx;
  /* margin-top: -40rpx; */
}

.visitorDetail .van-cell-group__title {
  background-color: rgb(255, 255, 255);
  font-size: 36rpx;
  color: #000;
  font-weight: bold;
  height: 57rpx;
  line-height: 57rpx;
}

.meeting {
  margin-top: 24rpx;
}

.meeting .van-cell__title {
  font-size: 36rpx;
  color: #000;
  font-weight: bold;
}

.meeting .van-cell__label{
  margin-top: 10rpx;
  font-size: 28rpx;
  font-weight:normal;
}