/* pages/vtinfo/vtinfo.wxss */

.vtinfo{
  margin-top: 32rpx;
  padding:0 38rpx;
  background:rgba(255,255,255,1);
  width: 100%;
  box-sizing: border-box;
}
.item{
  padding:32rpx 0;
  display: flex;
  border-bottom: 1rpx solid rgba(225,225,225,1);
  align-items: center;
}

.label{
  font-size:32rpx;
  color:rgba(17,17,17,1);
  font-weight: bold;
  text-overflow: ellipsis;
  overflow:hidden;
  max-width: 325rpx;
  white-space: nowrap;
}

.text{
  color:rgba(153,153,153,1);
  font-size:28rpx;
  flex: 1;
  text-align: right;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rightArrow{
  width: 17rpx;
  height: 17rpx;
  border-bottom: 3rpx solid #D2D2D2;
  border-right: 3rpx solid #D2D2D2;
  transform: rotate(-45deg);
}