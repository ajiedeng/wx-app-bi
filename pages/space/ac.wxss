.label {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(0, 127, 255, 1);
    line-height: 80rpx;
    height: 80rpx;
    margin-left: 32rpx;
}

.features {
    background: rgba(255, 255, 255, 1);
}

.feature {
    display: flex;
    border-bottom: 2rpx solid rgba(225, 225, 225, 1);
    padding: 38rpx 32rpx;
    align-items: center;
}

.featureName {
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(17, 17, 17, 1);
}

.featureValue {
    flex: 1;
    text-align: right;
    padding-right: 23rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 40rpx;
}

.rightArrow {
    width: 17rpx;
    height: 17rpx;
    border-bottom: 3rpx solid #D2D2D2;
    border-right: 3rpx solid #D2D2D2;
    transform: rotate(-45deg);
}

.acPage{
    overflow: auto;
    width: 100%;
    height: 100%;
}


.slider{
    padding:15% 5%;
}