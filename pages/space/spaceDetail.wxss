.spacePage{
    padding: 16rpx;
}

.envBar{
    display: flex;
    width: 100%;
    height: 144rpx;
    background:rgba(255,255,255,1);
    border-radius:8px;
    padding: 16rpx 34rpx;
    box-sizing: border-box;
    justify-content: space-around;
    align-items: center;
}

.envItem{
    display: flex;
    flex-direction:column;
    justify-items: center;
    align-items: center;
}

.envItem .state{
    font-size:40rpx;
    font-weight:500;
    color:rgba(0,127,255,1);
    line-height:56rpx;
}

.envItem .envLabel{
    font-size:28rpx;
    font-weight:400;
    color:rgba(17,17,17,1);
    line-height:40rpx;
}
.spaceContainer {
    display: flex;
    flex-wrap: wrap;
    padding: 30rpx 0;
    justify-content: space-between;
    align-content: flex-start;
}

.item {
    margin-bottom: 30rpx;
    background:rgba(255,255,255,1);
    display: flex;
    height: 144rpx;
    align-items: center;
    width: 45%;
    border-radius:8px;
}

.icon {
    margin: 0 40rpx;
}

.label{
    font-size:36rpx;
    font-weight:500;
    color:rgba(17,17,17,1);
    line-height:50rpx;
}