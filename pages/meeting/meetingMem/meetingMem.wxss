/* pages/meetingMem/meetingMem.wxss */
.tab{
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #67666B;
  height: 40px;

}
.tab view {
  flex: 1;
  text-align: center;
  height: 40px;
  line-height: 40px;
  background-color: #FFFFFF;
}
.tab view text{
  font-size: 14px;
  font-weight: 400;
  color: #67666B;
}
.content{
  width: 100%;
  overflow-y: auto;
  box-sizing: border-box;
  padding: 12px 16px;
}
.content .memberInfo {
  width: 100%;
  height: 72px;
  padding: 14px 16px;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 12px;
  background-color: #FFFFFF;
}
.content .memberInfo image{
  width: 44px;
  height: 44px;
  margin-right: 16px;
  border-radius: 50%;
  overflow: hidden;
}
.content .memberInfo text{
  font-size: 16px;
  font-weight: 400;
  color: #111111;
  margin-right: 16px;
}
.content .memberInfo text:last-of-type{
  color: #67666B;
}
.selected{
  color: #007FFF !important;
  display: inline-block;
  box-sizing: border-box;
  border-bottom: solid 2px #007FFF;
}
.avatar{
  font-size: 65rpx;
  text-align: center;
  width:44px;
  height:44px;
  line-height: 44px;
  background:rgba(143,143,143,1);
  border-radius: 50%;
  margin-right: 16rpx;
}