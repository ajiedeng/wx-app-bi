/* pages/meeting/meetingRoomList/meetingRoomList.wxss */
.meetingList{
  height: 100%;
  overflow-y: auto;
}
.meetingDetail{
  margin: 10px 15px;
  padding: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
}
.meetingImage{
  width: 40px;
  height: 40px;
  border-radius: 20%;
  margin-right: 10px;
  display: flex;
  align-items: center;
}
.meetingContent{
  display: flex;
  flex-direction: column;
}
.title{
  font-size: 15px;
}
.info{
  font-size: 13px;
  color: #999999de;
}
.selected{
  box-shadow: 0px 0px 2px 1px #0067FF;
}
.meetingDetail:active{
  box-shadow: 0px 0px 2px 1px #0067FF;
}