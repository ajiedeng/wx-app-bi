
.vtinfo{
    margin-top: 32rpx;
    padding:0 38rpx;
    background:rgba(255,255,255,1);
    width: 100%;
    box-sizing: border-box;
}
.item{
    padding:32rpx 0;
    display: flex;
    border-bottom: 1rpx solid rgba(225,225,225,1);
    align-items: center;
}

.label{
    font-size:32rpx;
    color:rgba(17,17,17,1);
    font-weight: bold;
    text-overflow: ellipsis;
    overflow:hidden;
    max-width: 325rpx;
    white-space: nowrap;
}

.text{
    color:rgba(153,153,153,1);
    font-size:28rpx;
    flex: 1;
    text-align: right;
    overflow:hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.rightArrow{
    width: 17rpx;
    height: 17rpx;
    border-bottom: 3rpx solid #D2D2D2;
    border-right: 3rpx solid #D2D2D2;
    transform: rotate(-45deg);
}

.apply{
    margin-top: 24rpx;
}

.button{
    position: fixed;
    bottom:0;
    width:100%;
    height:124rpx;
    background:rgba(255,255,255,1);
    font-size:32rpx;
    text-align: center;
    line-height: 124rpx;
    color:rgba(153,153,153,1);
}
.button-check{
    position: fixed;
    bottom:0;
    width:100%;
    height:124rpx;
    background:rgba(255,255,255,1);
    font-size:32rpx;
    text-align: center;
    line-height: 124rpx;
    color:rgba(153,153,153,1);
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    border-top: solid 1px #D2D2D2;
}
.button-check view{
    width: 50%;
    color: #0077FF;
}
.button-check view:first-of-type{
    border-right: solid 1px #D2D2D2
}
.highLight{
    color: #007FFF;
}

/* 取消预约弹框 */
.showModule{
    width: 100%;
    height: 100%;
}
.codeContent{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.codeContent text{
    margin-bottom: 20px;
}
.codeContent view{
    width: 100%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    color: #0077FF;
    border-top: solid 1px #D2D2D2;
}
.qrCode{
    width: 288px;
    height: 288px;
}