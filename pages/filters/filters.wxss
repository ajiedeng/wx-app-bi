/* pages/filters.wxss */

.navLeft{

}

.navLeft .addButton{
  margin-left: 50rpx;
}

.filter-page{
  background:rgba(247,247,247,1);
}

.filters {
  width: 100%; 
  white-space: nowrap;
  background:rgba(255,255,255,1);
}

.filters view{
  display: inline-block;
  font-size: 28rpx;
  font-weight: 400;
  color: #67666B;
  margin:0 28rpx;
  padding: 20rpx 0;
}

.filters .highlight {
  font-weight: 500;
  color: #007FFF;
  border-bottom: 4rpx solid #007FFF;
}

.list {
   /*height: 600rpx;*/
 background:rgba(247,247,247,1);
 padding-top: 12rpx;
 padding-left: 32rpx;
 padding-right: 32rpx;
 box-sizing: border-box;
}


.item{
  display: flex;
  justify-content: center;
  align-items: center;
  padding:30rpx 16rpx;
  background:rgba(255,255,255,1);
  border-radius:8rpx;
  margin-top: 12rpx;
}

.avatar{
  font-size: 65rpx;
  text-align: center;
  line-height: 88rpx;
  width:88rpx;
  height:88rpx;
  background:rgba(143,143,143,1);
  border-radius: 50%;
  margin: 0 16rpx;
}

.right{
  flex: 1;
  margin-left: 16rpx;
  min-width:0;
}

.title{
  font-size:24rpx;
  color:rgba(102,102,102,1);
}

.content{
  margin-top: 8rpx;
  font-size:28rpx;
  color:rgba(17,17,17,1);
  font: bold;
  text-overflow: ellipsis;
  overflow:hidden;
}

.phone {
  color:rgba(0,127,255,1);
}



.searchBar{
  background: #FFFFFF;
  padding: 12rpx 40rpx 4rpx 40rpx;
  display: flex;
}

.searchInput{
  background: #F7F7F7;
  border-radius: 34px;
  flex: 1;
  height: 68rpx;
  padding-left: 32rpx;
  display: flex;
  align-items: center;
  overflow:auto;
}

.searchFilter{
  display: flex;
  align-items: center;
  padding-left: 24rpx;
}

.searchFilter text{
  font-size: 28rpx;
  font-weight: 400;
  color: #007FFF;
  line-height: 40rpx;
  width: 56rpx;
  height: 40rpx;
}

.searchFilter image{
  width: 32rpx;
  height: 32rpx;
}

.searchItem{
  height: 52rpx;
  background: #EDF5FE;
  border-radius: 26rpx;
  border: 2rpx solid #007FFF;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding-left: 32rpx;
  padding-right: 12rpx;
  margin-left: 8rpx;
  flex-shrink:0;
}

.searchItem text{
  font-size: 24rpx;
  font-weight: 400;
  color: #007FFF;
}

.searchItem .filterIcon{
  vertical-align:baseline
}

.selected{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 124rpx;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.selectedNumber{
  height: 44rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #007FFF;
  line-height: 44rpx;
}

.confirmSelected{
  height: 68rpx;
  font-size: 32rpx;
  padding: 0rpx 30rpx;
  color: #FFFFFF;
  line-height: 68rpx;
  background: #007FFF;
  border-radius: 34rpx;
}