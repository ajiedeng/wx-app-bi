/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.navi image {
  width: 40rpx;
  height: 40rpx;
}
.naviGap{
  margin-left: 50rpx;
}


/* popup.wxss */
.popup{
  height: 90%;
  overflow: hidden;
  box-sizing: border-box;
}
.popup-container{
  /* width: 610rpx; */
  height: 100%;
  background: white;
  /* animation: bounceInLeft 1s infinite cubic-bezier(0.215, 0.610, 0.355, 1.000) */
}
.list-item{
  display: flex;
  justify-content: space-between;
  padding:28rpx 40rpx 0;
}
.popup-container .list-item:nth-child(2){
  padding-top: 82rpx;
  padding-bottom: 36rpx;
  border-bottom:2rpx solid #E1E1E1;
  padding-left:0;
  margin-left:40rpx;
}
.popup-container .list-item:nth-child(3){
  padding-top:40rpx;
}
.list-item .icon{
  max-width: 48rpx;
  vertical-align: middle;
}
.list-item .arrow{
  max-width: 14rpx;
  vertical-align: middle;
}
.user-info .username{
  font-size:40rpx;
  color:rgba(17,17,17,1);
  padding-bottom: 8rpx;
}
.user-info .userqq{
  font-size:28rpx;
  color:rgba(17,17,17,1);
}
.user-icon{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}

.set text,.out text{
  padding-left: 32rpx;
}




@keyframes bounceInLeft {
  from, 60%, 75%, 90%, to {animation-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000);}
  0% {opacity: 0;transform: translate3d(-3000px, 0, 0);}
  60% {opacity: 1;transform: translate3d(25px, 0, 0);}
  75% {transform: translate3d(-10px, 0, 0);}
  90% {transform: translate3d(5px, 0, 0);}
  100% {opacity: 1;transform: none;}
}